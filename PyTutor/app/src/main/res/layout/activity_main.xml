<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#113977"
    android:onClick="selectLesson"
    android:padding="16dp">

    <TextView
        android:id="@+id/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:onClick="selectLesson"
        android:text="PyTutor"
        android:textColor="#F7FAFB"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/layout_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Learn Python"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_subtitle"
        android:layout_marginTop="200dp"
        android:onClick="selectLesson"
        android:text="Select Lessons"
        app:backgroundTint="#959507" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="40dp"
        android:text="Points"
        app:backgroundTint="#959507" />

</RelativeLayout>